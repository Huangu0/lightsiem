{
  "template": "lightsiem-*",
  "settings": {
    "index.refresh_interval": "5s"
  },
  "mappings": {
    "_default_": {
      "dynamic": true,
      "properties": {
        "@timestamp": {
          "type": "date",
          "doc_values": true
        },
        "@version": {
          "type": "string",
          "index": "not_analyzed",
          "doc_values": true
        },
        "geoip": {
          "type": "object",
          "properties": {
            "ip": {
              "type": "ip",
              "doc_values": true
            },
            "location": {
              "type": "geo_point",
              "doc_values": true
            },
            "latitude": {
              "type": "float",
              "doc_values": true
            },
            "longitude": {
              "type": "float",
              "doc_values": true
            }
          }
        },
        "Alert": {
          "type": "object",
          "properties": {
            "Source": {
              "type": "object",
              "properties": {
                "Node": {
                  "type": "object",
                  "properties": {
                    "Address": {
                      "type": "ip",
                      "doc_values": true
                    },
                    "Port" : {"type" : "integer"},
		    "AS" : {"type" : "integer"},
		    "Mask" : {"type" : "integer"}
                  }
                },
                "Process":{
                  "type" : "object",
                  "properties": {
                    "Name" : {"type" : "string", "index":"not_analyzed" }
                  }
                }
              }
            },
            "Sensor": {
              "type": "object",
              "properties": {
                "Node": {
                  "type": "object",
                  "properties": {
                    "Address": {
                      "type": "ip",
                      "doc_values": true
                    }
                  }
                }
              }
            },
            "Target": {
              "type": "object",
              "properties": {
                "Node": {
                  "type": "object",
                  "properties": {
                    "Address": {
                      "type": "ip",
                      "doc_values": true
                    },
                    "Port" : {"type" : "integer"},
		    "AS" : {"type" : "integer"},
	 	    "Mask" : {"type" : "integer"}
                  }
                }
              }
            },
            "Analyzer": {
              "type": "object",
              "properties": {
                "Level": {
                  "type": "object",
                  "properties": {
                    "Normalized": {"type": "integer"},
                    "Origin": {"type": "integer"}
                  }
                },
                "Node":{
                  "type": "object",
                  "properties": {
                    "Name": {"type" : "string", "index":"not_analyzed" },
		    "Address": {
                      "type": "ip",
                      "doc_values": true
                    }
                  }
                },
                "Name": {"type" : "string", "index":"not_analyzed" },
                "Reason": {"type" : "string", "index":"not_analyzed" },
		"Netflow":{
		  "type": "object",
                  "properties": {
			"Direction": {"type": "integer"},
			"FlowSamplerId": {"type": "integer"},
			"FlowSeqNum": {"type": "integer"},
			"FlowsetId": {"type": "integer"},
			"InBytes": {"type": "integer"},
			"InPkts": {"type": "integer"},
			"InputSNMP": {"type": "integer"},
			"OutputSNMP": {"type": "integer"},
			"ToS": {"type": "integer"},
			"TCPFlags": {"type": "integer"},
			"NetflowVersion": {"type": "integer"},
			"NextHop":{
                      	  "type": "ip",
                      	  "doc_values": true
                    			}
				}
			}
				
          }
        },
            "Classification" : {
              "type" : "object",
              "properties": {
                "Ident": {"type" : "string", "index":"not_analyzed" },
                "Text": {"type" : "string", "index":"not_analyzed" },
                "Protocol": {"type" : "string", "index":"not_analyzed" }
              }
            }
          }
        },
        "type" : {"type": "string", "index":"not_analyzed" }
      }
    }
  }
}
